# Virtual environments
activate_function() {
    possibilities=( "bin/activate" "env/bin/activate" "venv/bin/activate" )
    for value in "${possibilities[@]}"; do
        if [[ -f "$value" ]]; then
            . "$value"
            return
        fi
    done
    return 1
}

alias a=activate_function
alias d='deactivate'
