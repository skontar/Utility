alias vim='vimx'
alias sdu='sudo dnf upgrade'
alias sdus='sudo dnf upgrade --security'
alias sdut='sdu --enablerepo=updates-testing,rpmfusion-free-updates-testing,rpmfusion-nonfree-updates-testing'
alias sdi='sudo dnf install'
