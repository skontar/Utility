#!/bin/bash

pgrep thunderbird || thunderbird &
pgrep doublecmd || doublecmd &
pgrep pycharm || /home/skontar/Programs/pycharm-community-2018.2.2/bin/pycharm.sh &
pgrep firefox || firefox &
pgrep hexchat || hexchat &
# pgrep mcheck || ~/Python/Mcheck/mcheck.py &
pgrep xfce4-terminal || i3-msg 'workspace "6: ï„  "; exec xfce4-terminal; exec xfce4-terminal'

sleep 20
for win in $(wmctrl -l | awk -F' ' '{print $1}'); do
    wmctrl -i -r $win -b remove,demands_attention
done
